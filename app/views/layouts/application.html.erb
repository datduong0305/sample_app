<!DOCTYPE html>
<html>
  <head>
    <title><%= yield(:title) %> | <%= t("layouts.rails") %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= link_to t("layouts.en"), locale:"en" %>
    <%= link_to t("layouts.vi"), locale:"vi" %>
    <%= yield %>
  </body>
</html>
